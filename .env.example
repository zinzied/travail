# OpenAI API Configuration (optional, for advanced AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
APP_NAME=CV Evaluation System
APP_VERSION=1.0.0
DEBUG=False

# Evaluation Settings
DEFAULT_LANGUAGE=en
SCORING_SCALE=100
MIN_SCORE_THRESHOLD=50

# Report Generation
REPORT_TEMPLATE=default
OUTPUT_FORMAT=pdf
INCLUDE_CHARTS=True

# Batch Processing
MAX_CONCURRENT_JOBS=5
BATCH_TIMEOUT=300

# File Processing
MAX_FILE_SIZE_MB=10
SUPPORTED_FORMATS=pdf
TEMP_DIR=temp/

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/cv_evaluator.log
